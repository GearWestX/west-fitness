  <!-- Team Section -->
  <section class="py-20 bg-slate-800">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-4xl font-bold text-white mb-4 text-center">
        Entrenadores Expertos
      </h2>
      <p class="text-xl text-gray-300 mb-12 text-center max-w-2xl mx-auto">
        Conoce a nuestros profesionales certificados dedicados a tu éxito
      </p>
      <div class="grid grid-cols-1 md:grid-cols-1 lg:grid-cols-1 gap-8">
        {
          trainers.map((trainer, index) => {
            let className = "";
            if (index + 1 == 4) {
              className = "lg:col-start-2";
            }
            else if (index + 1 == 5) {
              className = "md:col-start-2 lg:col-start-4";
            }
            return (
              <div class={`bg-slate-900 p-8 rounded-xl border border-slate-700 hover:border-primary transition-all transform hover:scale-105 md:col-span-2 ${className}`}>
                <div class="text-center mb-6">
                  <div class="w-40 h-40 rounded-full mx-auto mb-4 overflow-hidden border-4 border-primary/20">
                    <Image
                      src={trainer.image}
                      alt={`${trainer.name} - ${trainer.role}`}
                      width={400}
                      height={400}
                      class="w-full h-full object-cover"
                      loading="lazy"
                    />
                  </div>
                  <h3 class="text-xl font-bold text-white mb-2">
                    {trainer.name}
                  </h3>
                  <p class="text-primary mb-1 font-semibold">
                    {trainer.role}
                  </p>
                  <p class="text-gray-400 text-sm mb-3">
                    {trainer.specialization}
                  </p>
                  <p class="text-gray-500 text-xs">
                    {trainer.experience} de experiencia
                  </p>
                </div>
                <p class="text-gray-300 text-sm leading-relaxed mb-4 text-center">
                  {trainer.bio}
                </p>
                <div class="flex flex-wrap gap-2 justify-center">
                  {trainer.certifications.map((cert) => (
                    <span class="bg-slate-800 text-gray-300 text-xs px-3 py-1 rounded-full border border-slate-700">
                      {cert}
                    </span>
                  ))}
                </div>
              </div>
            );
          })
        }
      </div>
    </div>
  </section>
