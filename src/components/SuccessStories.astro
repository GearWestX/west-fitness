---
import { Image } from 'astro:assets';
import { successStories } from '../data/siteData';
---

<section id="success-stories" class="py-20 bg-slate-800">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-16">
      <h2 class="text-4xl md:text-5xl font-bold text-white mb-4">Historias de Éxito</h2>
      <p class="text-xl text-gray-300 max-w-2xl mx-auto">
        Transformaciones reales de miembros reales
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      {successStories.map((story) => (
        <div class="bg-slate-900 rounded-xl border border-slate-700 hover:border-primary transition-all overflow-hidden">
          <div class="grid grid-cols-2 gap-2 p-2">
            <div class="relative aspect-3/4 rounded-lg overflow-hidden">
              <Image
                src={story.beforeImage}
                alt={`${story.name} before`}
                width={400}
                height={600}
                class="w-full h-full object-cover"
                loading="lazy"
              />
              <div class="absolute bottom-2 left-2 bg-red-500/90 text-white text-xs px-2 py-1 rounded font-bold">
                Antes
              </div>
            </div>
            <div class="relative aspect-3/4 rounded-lg overflow-hidden">
              <Image
                src={story.afterImage}
                alt={`${story.name} after`}
                width={400}
                height={600}
                class="w-full h-full object-cover"
                loading="lazy"
              />
              <div class="absolute bottom-2 left-2 bg-green-500/90 text-white text-xs px-2 py-1 rounded font-bold">
                Después
              </div>
            </div>
          </div>
          <div class="p-6">
            <div class="flex items-center justify-between mb-4">
              <div>
                <h3 class="text-xl font-bold text-white">{story.name}</h3>
                <p class="text-sm text-gray-400">{story.age} años • {story.duration}</p>
              </div>
              <div class="bg-primary/10 text-primary px-4 py-2 rounded-lg font-bold text-sm">
                {story.result}
              </div>
            </div>
            <p class="text-gray-300 leading-relaxed italic">"{story.story}"</p>
          </div>
        </div>
      ))}
    </div>

    <div class="text-center mt-12">
      <a
        href="/contact"
        class="inline-flex items-center gap-3 bg-primary hover:bg-primary-hover text-white px-8 py-4 rounded-lg font-bold text-lg transition-all transform hover:scale-105"
      >
        Comienza Tu Viaje
        <i class="ri-arrow-right-line"></i>
      </a>
    </div>
  </div>
</section>

