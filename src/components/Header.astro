---
import { navigation, siteData } from '../data/siteData';
import logo from '../assets/logo.png';
---

<header class="fixed flex items-center justify-center w-full z-50 bg-slate-900/95 backdrop-blur-sm border-b border-slate-800">
  <nav class="max-w-5xl w-full px-4 sm:px-6 lg:px-8">
    <div class="flex items-center justify-between py-4">
      <!-- Logo -->
      <div class="shrink-0 flex items-center">
        <a href="/" class="flex items-center gap-3">
          <img src={logo.src} alt="West Fitness Logo" class="h-12 w-12" />
          <!-- <span class="text-2xl font-bold text-primary font-heading tracking-tight">{siteData.name}</span> -->
        </a>
      </div>

      <!-- Desktop Navigation -->
      <div class="hidden md:flex md:items-center md:justify-center md:gap-8">
        {navigation.map((item) => (
          <a
            href={item.href}
            class="text-gray-300 hover:text-primary transition-colors font-medium text-base py-2"
          >
            {item.name}
          </a>
        ))}
        <a
          href="tel:+50588514897"
          class="bg-primary hover:bg-primary-hover text-white rounded-lg font-semibold transition-all duration-200 inline-flex items-center justify-center gap-2 px-6 py-2.5"
        >
          Unete Ahora
          <i class="ri-arrow-right-line"></i>
        </a>
      </div>

      <!-- Mobile menu button -->
      <button
        id="mobile-menu-button"
        class="md:hidden text-white p-2 flex items-center justify-center"
        aria-label="Toggle menu"
      >
        <i id="menu-icon" class="ri-menu-line text-2xl"></i>
        <i id="close-icon" class="ri-close-line text-2xl hidden"></i>
      </button>
    </div>

    <!-- Mobile Navigation -->
    <div
      id="mobile-menu"
      class="hidden md:hidden pb-6 pt-2 space-y-2"
    >
      {navigation.map((item) => (
        <a
          href={item.href}
          class="block px-4 py-3 text-gray-300 hover:text-primary hover:bg-slate-800 rounded-lg transition-colors font-medium"
        >
          {item.name}
        </a>
      ))}
      <a
        href="/contact"
        class="flex items-center justify-center gap-2 px-6 py-3 bg-primary hover:bg-primary-hover text-white rounded-lg text-center font-semibold transition-all duration-200 mt-2 shadow-md hover:shadow-lg"
      >
        Join Now
        <i class="ri-arrow-right-line"></i>
      </a>
    </div>
  </nav>
</header>

<script>
  const mobileMenuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');
  const menuIcon = document.getElementById('menu-icon');
  const closeIcon = document.getElementById('close-icon');

  mobileMenuButton?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
    menuIcon?.classList.toggle('hidden');
    closeIcon?.classList.toggle('hidden');
  });
</script>

