---
import { Image } from 'astro:assets';
import Layout from '../layouts/Layout.astro';
import { classes, siteData, fullSchedule } from '../data/siteData';
---

<Layout title={`Classes - ${siteData.name}`}   description="Explora nuestra amplia gama de clases de fitness">
  <!-- Hero Section -->
  <section class="pt-32 pb-20 bg-linear-to-br from-slate-900 via-slate-800 to-slate-900">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center max-w-3xl mx-auto">
        <h1 class="text-5xl md:text-6xl font-bold text-white mb-6">Nuestros Servicios</h1>
        <p class="text-xl text-gray-300">
          Encuentra el entrenamiento perfecto para tu nivel y objetivos
        </p>
      </div>
    </div>
  </section>

  <!-- Detailed Classes Section -->
  <section class="py-20 bg-slate-800">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="space-y-16">
        {classes.map((classItem) => (
          <div class="bg-slate-900 rounded-xl border border-slate-700 overflow-hidden">
            <div class="grid grid-cols-1 lg:grid-cols-2 gap-0">
              <!-- Image -->
              <div class="relative h-64 lg:h-auto">
                <Image
                  src={classItem.image}
                  alt={classItem.name}
                  width={800}
                  height={600}
                  class="w-full h-full object-cover"
                  loading="lazy"
                />
                <div class="absolute top-4 right-4">
                  <span class="bg-primary text-white text-sm px-4 py-2 rounded-full font-semibold">
                    {classItem.difficulty}
                  </span>
                </div>
              </div>
              
              <!-- Content -->
              <div class="p-8">
                <div class="flex items-center justify-between mb-4">
                  <h2 class="text-3xl font-bold text-white">{classItem.name}</h2>
                  <div class="flex items-center text-gray-400 gap-2">
                    <i class="ri-time-line text-primary"></i>
                    <span>{classItem.duration}</span>
                  </div>
                </div>
                
                <p class="text-gray-300 text-lg mb-4 leading-relaxed">{classItem.detailedDescription}</p>
                
                <div class="mb-6">
                  <p class="text-white font-semibold mb-2">Entrenador: <span class="text-primary">{classItem.trainer}</span></p>
                   <p class="text-gray-400 text-sm">Qué esperar: {classItem.whatToExpect}</p>
                </div>
                
                <div class="mb-6">
                  <h4 class="text-white font-semibold mb-3">Beneficios Clave:</h4>
                  <ul class="grid grid-cols-2 gap-2">
                    {classItem.benefits.map((benefit) => (
                      <li class="flex items-center gap-2 text-gray-300 text-sm">
                        <i class="ri-checkbox-circle-fill text-primary"></i>
                        {benefit}
                      </li>
                    ))}
                  </ul>
                </div>
                
                <a
                  href="tel:+50588514897"
                  class="inline-flex items-center gap-2 bg-primary hover:bg-primary-hover text-white px-6 py-3 rounded-lg font-semibold transition-all"
                >
                  Reserva Ahora
                  <i class="ri-arrow-right-line"></i>
                </a>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

